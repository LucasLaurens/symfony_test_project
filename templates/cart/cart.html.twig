{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="row">
        {% for item in items %}
            <div class="col-4 mt-4">
                <div class="border border-dark rounded p-2 clearfix">
                    <h2> {{ item['book'].name }} </h2>
                    <span> price: {{ item['book'].price }} </span>
                    <span> qty: {{ item['quantity'] }} </span>
                    <p> total: {{ item['book'].price * item['quantity'] }} </p>
                    <a href="{{ path('app_remove_book', {id: item['book'].id}) }}" class="btn btn-success float-right">
                        <i class="fas fa-trash"></i>
                        Supprimer
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>

</div>
{% endblock %}
