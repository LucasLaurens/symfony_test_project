{% extends 'base.html.twig' %}

{% block title %}Hello TestController!{% endblock %}

{% block stylesheets %}
    <style>
        .wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-flow: column;
        }
        #message > div {
            display: flex;
            flex-flow: column;
            align-items: center;
            margin-top: 1rem;
        }
        .messages {
            margin-top: 3rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="wrapper">
    {{ form(form) }}

    <div class="messages">
        <p><strong>There are {{count}} message(s) that are online</strong></p>
        {% if messages is defined %}
            {% for message in messages %}
                <div class="message">{{message.subject}}</div>
            {% endfor %}
        {% endif %}
    </div>
</div>
{% endblock %}
